/* 登录页面样式 */
.login-page {
  min-height: 100vh;
  background-color: #0F1A38;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #0F1A38, #142447 30%, #0F1A38 100%);
  z-index: -1;
}

/* 头部Logo部分 */
.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo-container {
  margin-bottom: 30rpx;
}

.logo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3a4a9c, #7d97ff);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.logo-avatar::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  z-index: 1;
}

.logo-text {
  color: #ffffff;
  font-size: 100rpx;
  font-weight: bold;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录选项 */
.login-options {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.login-btn {
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  position: relative;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
  text-align: center;
}

.wechat-login {
  background: linear-gradient(to right, #3dc551, #42b853);
  color: white;
}

.phone-login {
  background: linear-gradient(to right, #7d97ff, #5565d9);
  color: white;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

/* 隐私政策 */
.privacy-policy {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.policy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 10rpx;
}

.policy-link {
  color: #7D9FF4;
  display: inline;
}

/* 游客模式 */
.guest-login {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
} 