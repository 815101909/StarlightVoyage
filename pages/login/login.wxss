/* 流星效果 */
.meteor {
  position: fixed;
  width: 150rpx;
  height: 1rpx;
  background: linear-gradient(to left, 
    transparent 0%,
    rgba(125, 159, 244, 0.1) 15%,
    rgba(125, 159, 244, 0.4) 30%,
    rgba(155, 189, 255, 0.7) 50%,
    rgba(200, 220, 255, 0.9) 70%,
    rgba(255, 255, 255, 0.95) 85%,
    #ffffff 100%);
  border-radius: 50%;
  transform: rotate(-45deg);
  box-shadow: 0 0 15rpx 2rpx rgba(125, 159, 244, 0.5),
              0 0 30rpx 4rpx rgba(125, 159, 244, 0.2);
  z-index: 9999;
  filter: blur(0.3rpx);
}

/* 流星动画 */
@keyframes shooting-star {
  0% {
    opacity: 0;
    transform: translateX(0) translateY(0) rotate(-45deg) scale(0.8);
  }
  3% {
    opacity: 1;
    transform: translateX(-80rpx) translateY(80rpx) rotate(-45deg) scale(1);
  }
  97% {
    opacity: 1;
    transform: translateX(-620rpx) translateY(620rpx) rotate(-45deg) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateX(-700rpx) translateY(700rpx) rotate(-45deg) scale(0.8);
  }
}

/* 5颗流星的不同配置 - 从最右边一个个出现 */
