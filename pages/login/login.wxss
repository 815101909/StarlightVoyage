/* 登录页面样式 */
.login-page {
  min-height: 100vh;
  background-color: #0F1A38;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 40rpx 48rpx 60rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #0F1A38;
  z-index: -1;
  overflow: hidden;
}

/* 动态背景装饰 */
.page-bg::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500rpx;
  height: 500rpx;
  background-color: rgba(125, 159, 244, 0.06);
  border-radius: 50%;
  filter: blur(80rpx);
  animation: float1 8s ease-in-out infinite;
}

.page-bg::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background-color: rgba(125, 159, 244, 0.04);
  border-radius: 50%;
  filter: blur(60rpx);
  animation: float2 10s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% {
    transform: translate(0, 0);
  }
  50% {
    transform: translate(-50rpx, 50rpx);
  }
}

@keyframes float2 {
  0%, 100% {
    transform: translate(0, 0);
  }
  50% {
    transform: translate(50rpx, -30rpx);
  }
}

