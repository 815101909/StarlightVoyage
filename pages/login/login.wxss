/* 头部Logo部分 */
.header {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  transform: translateY(-40rpx);
}

.logo-container {
  margin-bottom: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* Logo 装饰圆环 */
.logo-container::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 300rpx;
  border: 2rpx solid rgba(125, 159, 244, 0.2);
  border-radius: 50%;
  animation: rotate 15s linear infinite;
}

.logo-container::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 260rpx;
  height: 260rpx;
  border: 2rpx solid rgba(125, 159, 244, 0.1);
  border-top-color: rgba(125, 159, 244, 0.3);
  border-radius: 50%;
  animation: rotate 10s linear infinite reverse;
}

@keyframes rotate {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

.logo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #7D9FF4;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(125, 159, 244, 0.35),
              0 0 0 1rpx rgba(255, 255, 255, 0.05);
  position: relative;
  z-index: 1;
  animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 12rpx 40rpx rgba(125, 159, 244, 0.35),
                0 0 0 1rpx rgba(255, 255, 255, 0.05);
  }
  50% {
    box-shadow: 0 16rpx 50rpx rgba(125, 159, 244, 0.5),
                0 0 0 1rpx rgba(255, 255, 255, 0.1);
  }
}

.logo-text {
  color: #ffffff;
  font-size: 76rpx;
  font-weight: bold;
  line-height: 1;
}

.logo-image {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
