  align-items: center;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.thinking-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.thinking-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.thinking-question-content {
  position: relative;
  z-index: 1;
  background-color: rgba(20, 35, 75, 0.5);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  border: 1px solid rgba(125, 159, 244, 0.15);
