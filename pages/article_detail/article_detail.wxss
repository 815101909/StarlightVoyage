.article-container {
  min-height: 100vh;
  background-color: #0F1A38;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

/* Star background */
.star-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, #081020 0%, #0F1A38 50%, #1A2C57 100%);
  z-index: -1;
}

.star-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(1px 1px at 25px 5px, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 50px 25px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 125px 20px, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 70px 90px, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 175px 125px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0));
  background-repeat: repeat;
  background-size: 200px 200px;
  z-index: -1;
}

/* Article header with cover */
.article-header {
  padding: 30rpx 30rpx 20rpx;
}

.header-content {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.article-cover {
  width: calc(100% - 328rpx); /* Reduced by 40rpx, then increased by 12rpx */
  height: 260rpx; /* Increased by 20rpx from 240rpx */
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  flex-shrink: 0;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.article-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  line-height: 1.6;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

.article-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

.article-date {
