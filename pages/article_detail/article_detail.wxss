/* ============= 翻页容器 ============= */
/* 参考标准CSS 3D翻页实现 */

.content-swiper {
  position: relative;
  width: 100%;
  height: 1000rpx; /* 固定高度，与page-layer保持一致 */
  margin: 0 auto;
  perspective: 2000px; /* 增大视距，让3D效果更明显 */
  perspective-origin: 50% 50%; /* 视角中心 */
  transform-style: preserve-3d; /* 开启3D */
}

/* 页面层 - 绝对定位堆叠，像书页一样 */
.page-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(15, 26, 56, 0.95);
  border-radius: 12rpx;
  box-shadow: 
    inset 0 0 20rpx rgba(0, 0, 0, 0.1), /* 内阴影 */
    0 8rpx 32rpx rgba(0, 0, 0, 0.4), /* 外阴影 */
    -10rpx 0 20rpx rgba(0, 0, 0, 0.3); /* 左侧阴影，增强立体感 */
  backface-visibility: hidden; /* 背面不可见 - 关键！翻页时隐藏背面 */
  transition: transform 0.6s ease-out, box-shadow 0.6s ease-out; /* 平滑翻页 */
  pointer-events: auto;
}

/* 非当前页面 - 固定高度，防止内容溢出 */
.page-layer.inactive-page {
  height: 1000rpx; /* 固定高度 */
  overflow: hidden; /* 隐藏溢出内容 */
}

/* 当前显示页面 - 自适应高度，整体滚动 */
.page-layer.active-page {
  min-height: 1000rpx; /* 最小高度 */
  overflow: visible; /* 内容可见，整体滚动 */
}

/* 翻页时增强弯曲效果的阴影（左侧暗部）*/
.page-layer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 150rpx; /* 弯曲阴影宽度 */
  height: 100%;
  background: linear-gradient(
    to right,
    rgba(0, 0, 0, 0.5),
    rgba(0, 0, 0, 0.3) 30%,
    rgba(0, 0, 0, 0.1) 70%,
    transparent
  );
  opacity: 0;
  transition: opacity 0.3s ease-out;
  pointer-events: none;
  border-radius: 12rpx 0 0 12rpx;
  z-index: 1;
}

/* 翻页时的高光效果（模拟弯曲的光线）*/
.page-layer::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 100%;
  background: linear-gradient(
    to right,
    transparent,
    rgba(255, 255, 255, 0.05) 40%,
    rgba(255, 255, 255, 0.1) 60%,
    transparent
  );
  opacity: 0;
  transition: opacity 0.3s ease-out;
  pointer-events: none;
  border-radius: 12rpx 0 0 12rpx;
  z-index: 2;
}

/* 页面1：引言（最上层，像书的封面）*/
.page-layer-1 {
  z-index: 30;
  transform-origin: left center; /* 从左边缘翻 */
  transform: rotateY(0deg);
}

/* 页面2：正文（中间层）*/
.page-layer-2 {
  z-index: 20;
  transform-origin: left center;
  transform: rotateY(0deg);
}

/* 页面3：结论（底层）*/
.page-layer-3 {
  z-index: 10;
  transform-origin: left center;
  transform: rotateY(0deg);
}

/* 翻页中 - 禁用过渡，手动控制 */
.page-layer.flipping {
  transition: none;
  will-change: transform;
  box-shadow: 
    inset 0 0 20rpx rgba(0, 0, 0, 0.1),
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    -10rpx 0 30rpx rgba(0, 0, 0, 0.5), /* 翻页时加强左侧阴影 */
    10rpx 0 30rpx rgba(0, 0, 0, 0.5); /* 右侧也加阴影 */
}

/* 翻页时显示弯曲阴影和高光 */
.page-layer.flipping::before {
  opacity: 1;
}

.page-layer.flipping::after {
  opacity: 0.8;
}

/* 已翻过的页面 - 完全翻到背面 */
.page-layer.flipped {
  transform: rotateY(-180deg) !important;
  pointer-events: none;
  z-index: 1;
  box-shadow: 
    inset 0 0 20rpx rgba(0, 0, 0, 0.1),
    0 8rpx 32rpx rgba(0, 0, 0, 0.4);
}

