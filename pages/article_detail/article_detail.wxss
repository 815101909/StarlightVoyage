/* 富文本内容统一样式 */
.rich-content {
  width: 100%;
  margin: 0;
  padding: 0;
  line-height: 1.8;
  color: #ffffff;
  font-size: inherit;
  height: auto;
  overflow: visible;
  word-wrap: break-word;
  white-space: normal;
  box-sizing: border-box;
}

/* 富文本段落样式 */
.rich-content p,
.rich-content view {
  display: block;
  margin: 0.3em 0;
  min-height: 1.2em;
  text-align: justify;
  line-height: 1.8;
  word-break: break-all;
  white-space: pre-wrap;
}

.rich-content p:first-child,
.rich-content view:first-child {
  margin-top: 0;
}

.rich-content p:last-child,
.rich-content view:last-child {
  margin-bottom: 0;
}

.rich-content p + p,
.rich-content view + view {
  margin-top: 0.5em;
}

