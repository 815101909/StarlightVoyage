/* 会员锁定样式 */
.article-content.locked {
  opacity: 1;
  pointer-events: none;
}

.member-lock-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.lock-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 50rpx 60rpx;
  background: linear-gradient(135deg, rgba(15, 26, 56, 0.95), rgba(26, 44, 87, 0.95));
  border-radius: 24rpx;
  border: 2rpx solid rgba(125, 159, 244, 0.4);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.6),
    0 0 40rpx rgba(125, 159, 244, 0.2);
  max-width: 600rpx;
  margin: 0 30rpx;
}

.lock-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0 0 20rpx rgba(125, 159, 244, 0.8));
  animation: lock-pulse 2s infinite;
}

@keyframes lock-pulse {
  0%, 100% {
    transform: scale(1);
    filter: drop-shadow(0 0 20rpx rgba(125, 159, 244, 0.8));
  }
  50% {
    transform: scale(1.05);
    filter: drop-shadow(0 0 30rpx rgba(125, 159, 244, 1));
  }
}

.lock-title {
  font-size: 40rpx;
  color: #7D9FF4;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 0 12rpx rgba(125, 159, 244, 0.6);
}

.lock-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 50rpx;
  line-height: 1.6;
}

.lock-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.unlock-btn {
  flex: 1;
  padding: 24rpx 30rpx;
  border-radius: 50rpx;
  transition: all 0.3s ease;
  text-align: center;
}

.unlock-btn.primary {
  background: linear-gradient(135deg, #7D9FF4 0%, #5B7FD4 100%);
  box-shadow: 0 4rpx 16rpx rgba(125, 159, 244, 0.4);
}

.unlock-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(125, 159, 244, 0.6);
}

.unlock-btn.secondary {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(125, 159, 244, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

