    radial-gradient(1px 1px at 15px 15px, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 40px 70px, rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0)),
    radial-gradient(1.5px 1.5px at 90px 40px, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)),
