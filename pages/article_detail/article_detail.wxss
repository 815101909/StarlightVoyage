/* pages/article_detail/article_detail.wxss */
.article-container {
  height: 100vh;
  background-color: #0F1A38;
  position: relative;
  overflow: hidden;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

/* Star background */
.star-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, #081020 0%, #0F1A38 50%, #1A2C57 100%);
  z-index: -1;
}

.star-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(1px 1px at 25px 5px, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 50px 25px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 125px 20px, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 70px 90px, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 175px 125px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0));
  background-repeat: repeat;
  background-size: 200px 200px;
  z-index: -1;
}

/* Article header with cover */
.article-header {
  padding: 0 30rpx 10rpx;
  margin-top: 0;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 0;
}

/* 封面容器 */
.cover-container {
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.article-cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

/* 标题叠加层 - 字幕样式 */
.title-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(
    to top,
    rgba(15, 26, 56, 0.98) 0%,
    rgba(15, 26, 56, 0.95) 30%,
    rgba(15, 26, 56, 0.85) 60%,
    rgba(15, 26, 56, 0.5) 85%,
    transparent 100%
  );
  backdrop-filter: blur(10rpx);
  padding: 10rpx 30rpx 10rpx;
}

.article-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.5;
  text-shadow: 
    0 2px 8px rgba(0, 0, 0, 0.8),
    0 0 20rpx rgba(125, 159, 244, 0.3);
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
  margin: 0;
}

.article-info {
  display: flex;
  flex-direction: column;
  padding: 15rpx 0 0;
}

.article-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
}

.article-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.article-tag {
  font-size: 24rpx;
  color: #7D9FF4;
  background-color: rgba(125, 159, 244, 0.15);
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
  font-weight: 500;
  align-self: flex-start;
}

.article-tag.premium {
  color: #FFD700;
  background-color: rgba(255, 215, 0, 0.15);
  border: 1px solid rgba(255, 215, 0, 0.4);
  font-weight: bold;
  text-shadow: 0 0 4rpx rgba(255, 215, 0, 0.3);
}

/* 封面图片占位符样式 */
.no-cover-placeholder {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
