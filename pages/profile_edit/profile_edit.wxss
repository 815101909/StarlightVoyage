.tags-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 24rpx;
}

.tag-item {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.tag-item.selected {
  background: rgba(125, 161, 255, 0.2);
  border-color: rgba(125, 161, 255, 0.6);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(125, 161, 255, 0.2);
}

.tag-icon {
  font-size: 36rpx;
}

.tag-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}

