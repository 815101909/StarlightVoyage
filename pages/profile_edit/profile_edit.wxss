/* 编辑个人资料页面样式 */
.edit-profile-page {
  position: relative;
  min-height: 100vh;
  background-color: #040414;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 背景 */
.profile-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(7, 13, 47, 0.8), rgba(7, 13, 47, 0.5));
  z-index: -1;
}

/* 编辑表单 */
.edit-form {
  background: rgba(12, 18, 55, 0.8);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 头像编辑区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(125, 161, 255, 0.6);
  background-color: #1c2b5a;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(125, 161, 255, 0.6);
  background: linear-gradient(135deg, #3a4a9c, #7d97ff);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.default-avatar::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  z-index: 1;
}

.avatar-text {
  color: #ffffff;
  font-size: 80rpx;
  font-weight: bold;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.avatar-edit-btn {
  margin-top: 20rpx;
  color: #7da1ff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border: 1px solid #7da1ff;
  border-radius: 30rpx;
}

/* 表单项目 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.form-input {
  background: rgba(255, 255, 255, 0.1);
  height: 80rpx;
  border-radius: 10rpx;
  color: #fff;
  padding: 0 20rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
  transition: background-color 0.3s;
}

.form-input:focus {
  background: rgba(255, 255, 255, 0.2);
}

/* 数字输入框样式 */
.form-input[type="number"] {
  text-align: left;
  font-weight: 500;
  color: #ffffff;
}

.form-textarea {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  color: #fff;
  padding: 20rpx;
  font-size: 30rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-label {
  margin-right: 40rpx;
  color: #fff;
  font-size: 30rpx;
}

/* 地区选择器 */
.picker-value {
  background: rgba(255, 255, 255, 0.1);
  height: 80rpx;
  border-radius: 10rpx;
  color: #fff;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.tag {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  padding: 10rpx 20rpx;
  margin: 8rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.tag.selected {
  background: rgba(125, 161, 255, 0.3);
  color: #7da1ff;
  border: 1px solid #7da1ff;
}

/* 按钮区域 */
.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.cancel-btn, .save-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
  line-height: 1;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.save-btn {
  background: linear-gradient(to right, #7d97ff, #5565d9);
  color: #fff;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(125, 161, 255, 0.3);
  border-top: 6rpx solid #7da1ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 学习目标列表 */
.learning-goals {
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  padding: 10rpx 0;
  width: 100%;
}

.goal-item {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.goal-item:last-child {
  border-bottom: none;
}

.goal-content {
  display: flex;
  align-items: center;
}

.goal-text {
  margin-left: 15rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 1.4;
} 