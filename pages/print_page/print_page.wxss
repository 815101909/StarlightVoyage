/* pages/print_page/print_page.wxss */
.print-container {
  min-height: 100vh;
  background-color: #0F1A38;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
  padding-bottom: 80rpx;
}

/* Header */
.print-header {
  padding: 20rpx;
}

.header-title {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: #7D9FF4;
  padding: 10rpx;
}

.article-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.article-title {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Print Content */
.print-content {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 60rpx;
  margin-bottom: 60rpx;
  width: 100%;
}

/* A4 区域 */
.a4-area {
  width: 700rpx;
  height: 990rpx;
  background-color: transparent;
  border-radius: 8rpx;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.print-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.no-image-tip {
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

/* 诗句区域样式 */
.poem-container {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 40rpx;
}

.poem-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
  letter-spacing: 2rpx;
  color: #7D9FF4;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.poem-author {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.poem-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.poem-original, .poem-translation {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.poem-line {
  font-size: 26rpx;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 4rpx;
}

.poem-original .poem-line {
  font-style: italic;
  color: rgba(255, 255, 255, 0.8);
}

.poem-translation .poem-line {
  color: rgba(255, 255, 255, 0.95);
}

.poem-translator {
  font-size: 24rpx;
  margin-top: 12rpx;
  opacity: 0.7;
  align-self: flex-end;
  margin-right: 120rpx;
}

/* 底部操作按钮 */
.print-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.print-btn {
  width: 300rpx;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 30rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #7D9FF4 0%, #4169E1 100%);
  border: none;
  box-shadow: 0 4px 10px rgba(65, 105, 225, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

/* 图片导航 */
.image-nav {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.nav-icon {
  color: #fff;
  font-size: 24rpx;
}

.nav-counter {
  color: rgba(0, 0, 0, 0.7);
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
} 