/* pages/print_page/print_page.wxss */
.print-container {
  min-height: 100vh;
  background-color: #0F1A38;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "Source Han Serif", "思源宋体", "Noto Serif SC", serif;
  padding-bottom: 80rpx;
}

/* Header */
.print-header {
  padding: 20rpx;
}

.header-title {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: #7D9FF4;
  padding: 10rpx;
}

.article-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.article-title {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Print Content */
.print-content {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 60rpx;
  margin-bottom: 60rpx;
}

/* A4 区域 */
.a4-area {
  width: 700rpx; /* 更大的A4宽度 */
  height: 990rpx; /* 更大的A4高度 */
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  position: relative;
}

/* 诗句区域样式 */
.poem-container {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255, 255, 255, 0.9);
}

.poem-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
  letter-spacing: 2rpx;
  color: #7D9FF4;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.poem-author {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.poem-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.poem-original, .poem-translation {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.poem-line {
  font-size: 26rpx;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 4rpx;
}

.poem-original .poem-line {
  font-style: italic;
  color: rgba(255, 255, 255, 0.8);
}

.poem-translation .poem-line {
  color: rgba(255, 255, 255, 0.95);
}

.poem-translator {
  font-size: 24rpx;
  margin-top: 12rpx;
  opacity: 0.7;
  align-self: flex-end;
  margin-right: 120rpx;
}

/* 底部操作按钮 */
.print-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.print-btn {
  width: 300rpx;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 30rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #7D9FF4 0%, #4169E1 100%);
  border: none;
  box-shadow: 0 4px 10px rgba(65, 105, 225, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
} 