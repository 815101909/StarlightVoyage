/* pages/star/star.wxss */
.star-page {
  min-height: 100vh;
  height: 100vh;
  background-color: #0F1A38;
  padding: 30rpx 10rpx;
  position: relative;
  overflow: hidden;
}

/* 网络状态提示 */
.network-status {
  width: 100%;
  padding: 10rpx 0;
  text-align: center;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
}

.offline {
  background-color: rgba(255, 165, 0, 0.3);
  border: 1px solid rgba(255, 165, 0, 0.6);
}

.api-error {
  background-color: rgba(255, 99, 71, 0.3);
  border: 1px solid rgba(255, 99, 71, 0.6);
}

.network-message {
  font-size: 24rpx;
  color: #ffffff;
}

/* 星空背景 */
.star-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #0F1A38 0%, #1A2C57 100%);
  z-index: -1;
  overflow: hidden;
}

.star-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0));
  background-size: 200px 200px;
  z-index: -1;
}

/* 页面标题 */
.page-header {
  margin-bottom: 20rpx;
  padding: 15rpx 0 30rpx; text-align: center;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 0 10rpx rgba(125, 159, 244, 0.5);
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 太空地图样式 */
.space-map {
  width: 100%;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: rgba(11, 20, 44, 0.7);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.5);
  transform: translateY(-15rpx);
}

.map-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: rgba(29, 35, 71, 0.7);
  border-bottom: 1px solid rgba(125, 159, 244, 0.2);
}

.map-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.map-tabs {
  display: flex;
  gap: 18rpx;
}

.map-tab {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.map-tab.active {
  color: #ffffff;
  background-color: rgba(125, 159, 244, 0.3);
  box-shadow: 0 0 10rpx rgba(125, 159, 244, 0.5);
}

.map-content {
  position: relative;
  height: 460rpx; /* 减小高度，给底部留出空间 */
  width: 100%;
  overflow: hidden;
  background-color: #080F21;
}

.map-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  background-color: #000;
  display: block;
  vertical-align: top;
  position: absolute;
  top: 0;
  left: 0;
}

.map-placeholder {
  width: 100%;
  height: 100%;
  position: relative;
  display: block;
  background: linear-gradient(135deg, 
    rgba(15, 26, 56, 0.95) 0%, 
    rgba(29, 35, 71, 0.95) 25%,
    rgba(42, 52, 91, 0.95) 50%,
    rgba(29, 35, 71, 0.95) 75%,
    rgba(15, 26, 56, 0.95) 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
}

.placeholder-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.placeholder-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.8);
}

/* 视频信息 */
.video-info {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  padding: 12rpx 20rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 70%, rgba(0, 0, 0, 0) 100%);
  color: #ffffff;
  pointer-events: none;
  max-height: 100rpx;
  z-index: 10;
}

.video-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
  line-height: 1.2;
}

.video-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
  line-height: 1.3;
}

.video-duration {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 轮播容器 */
.swiper-container {
  width: 100%;
  height: 380rpx; /* 减小高度，给底部留出空间 */
  position: relative;
  margin-bottom: 10rpx;
}

.section-swiper {
  width: 100%;
  height: 430rpx;
}

/* 轮播指示点 */
.swiper-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  gap: 16rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.dot.active {
  width: 30rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #7D9FF4;
}

/* 板块卡片 */
.section-card {
  position: relative;
  height: 420rpx; /* 对应swiper高度 */
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.4);
  transition: all 0.3s ease;
}

.section-card:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.5);
}

.section-image {
  width: 100%;
  height: 100%;
  transition: transform 0.5s ease;
  object-fit: contain;
  display: block;
  margin: 0 auto;
  background-color: #000;
}

.section-card:hover .section-image {
  transform: scale(1.05);
}

/* 板块内容覆盖层 */
.section-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx 25rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 50%, rgba(0, 0, 0, 0) 100%);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.section-content {
  flex: 1;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.section-icon {
  font-size: 40rpx;
  color: #7D9FF4;
  margin-left: 20rpx;
  transition: transform 0.3s;
}

.section-card:active .section-icon {
  transform: translateX(5rpx);
}

/* 底部装饰 */
.footer-decoration {
  margin-top: 20rpx;
  padding: 10rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translateY(50rpx);
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 容器设置，防止滑动 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
} 