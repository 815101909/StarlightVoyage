/* pages/planet_wheel/planet_wheel.wxss */
.wishing-pool-page {
  min-height: 100vh;
  background-color: #0F1A38;
  position: relative;
  overflow: hidden;
}

/* 页面背景 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1a2a4a 0%, #0F1A38 100%);
  z-index: 1;
}

/* 页面标题 */
.page-header {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  display: block;
}

/* 许愿池区域 */
.pool-section {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pool-container {
  width: 600rpx;
  height: 400rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.wishing-pool {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.pool-water {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #4A90E2 0%, #357ABD 100%);
  opacity: 0.8;
  animation: waterWave 3s ease-in-out infinite;
}

.stars-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.star {
  position: absolute;
  opacity: 0;
  transform: translateY(100%);
}

.star.animate {
  animation: starRise 2s ease-out forwards;
  animation-delay: var(--delay);
}

.star-icon {
  font-size: 40rpx;
  color: #FFD700;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

/* 许愿输入区 */
.wish-input-section {
  width: 100%;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.wish-input {
  width: 100%;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 20rpx;
  color: #ffffff;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.wish-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.wish-count {
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 20rpx;
}

.wish-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.wish-button.disabled {
  background: linear-gradient(135deg, #666666 0%, #444444 100%);
  opacity: 0.7;
}

/* 愿望列表 */
.wishes-section {
  position: relative;
  z-index: 2;
  padding: 40rpx;
}

.section-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.wishes-list {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 20rpx;
  backdrop-filter: blur(10px);
}

.wish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.wish-item:last-child {
  border-bottom: none;
}

.wish-content {
  flex: 1;
  margin-right: 20rpx;
}

.wish-text {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
  display: block;
}

.wish-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  display: block;
}

.wish-status {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-icon {
  font-size: 36rpx;
}

/* 动画 */
@keyframes waterWave {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes starRise {
  0% {
    opacity: 0;
    transform: translateY(100%) scale(0.5);
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 1;
    transform: translateY(-100%) scale(1);
  }
}

/* 星空许愿池主样式 */
.starry-wish-page {
  min-height: 100vh;
  width: 100vw;
  background: #0a1633;
  position: relative;
  overflow: hidden;
}

.star-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100vw;
  height: 100vh;
  background: radial-gradient(ellipse at 50% 30%, #1a2a4a 60%, #0a1633 100%);
  z-index: 1;
}

/* 星星样式 */
.star-item {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.4,1.4,0.6,1);
  cursor: pointer;
  opacity: 0.85;
  z-index: 2;
}
.star-item .star-icon {
  font-size: 32rpx;
  color: #fffbe6;
  filter: drop-shadow(0 0 8rpx #fffbe6) drop-shadow(0 0 16rpx #fffbe6);
  transition: font-size 0.4s cubic-bezier(0.4,1.4,0.6,1);
  animation: star-twinkle 2.5s infinite ease-in-out;
}
.star-item.active .star-icon,
.star-item.wished .star-icon {
  font-size: 64rpx;
  color: #ffe066;
  filter: drop-shadow(0 0 16rpx #ffe066) drop-shadow(0 0 32rpx #ffe066);
  animation: star-grow 0.5s;
}
.star-item .wish-content {
  position: absolute;
  left: 50%;
  top: 110%;
  transform: translateX(-50%);
  min-width: 180rpx;
  max-width: 320rpx;
  background: rgba(255,255,255,0.95);
  color: #333;
  font-size: 26rpx;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.18);
  margin-top: 8rpx;
  z-index: 20;
  word-break: break-all;
  animation: wish-fadein 0.5s;
}

.star-item .wish-content .wish-date {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
}

@keyframes star-twinkle {
  0%,100% { opacity: 0.85; filter: brightness(1); }
  50% { opacity: 1; filter: brightness(1.3); }
}
@keyframes star-grow {
  0% { font-size: 32rpx; filter: brightness(1); }
  100% { font-size: 64rpx; filter: brightness(1.5); }
}
@keyframes wish-fadein {
  0% { opacity: 0; transform: translateY(20rpx) scale(0.9); }
  100% { opacity: 1; transform: translateY(0) scale(1); }
}

/* 许愿弹窗 */
.wish-modal {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(10,22,51,0.65);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wish-modal-content {
  background: #fffbe6;
  border-radius: 24rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  min-width: 480rpx;
  max-width: 90vw;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.18);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wish-input {
  width: 100%;
  min-height: 100rpx;
  max-height: 200rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ffe066;
  padding: 16rpx;
  margin-bottom: 16rpx;
  background: #fff;
  color: #333;
}
.wish-count {
  align-self: flex-end;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 16rpx;
}
.wish-modal-actions {
  display: flex;
  width: 100%;
  justify-content: space-between;
  gap: 24rpx;
}
.wish-btn {
  flex: 1;
  background: linear-gradient(90deg,#ffe066,#ffd700);
  color: #333;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 16rpx 0;
  font-weight: bold;
  margin-right: 0;
}
.cancel-btn {
  flex: 1;
  background: #eee;
  color: #666;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 16rpx 0;
  font-weight: bold;
} 