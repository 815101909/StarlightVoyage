/* pages/privacy/privacy.wxss */

.privacy-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #0F1A38;
}

/* 标签栏样式 */
.tab-container {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #0F1A38;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #fff;
}

.tab-item.active .tab-text {
  font-weight: bold;
  color: #60a5fa;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background-color: #60a5fa;
  border-radius: 3rpx;
}

/* 加载中样式 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 88rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top: 6rpx solid #60a5fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

/* 内容区域样式 */
.content-scroll {
  flex: 1;
  margin-top: 88rpx;
  margin-bottom: 100rpx;
}

.content-container {
  padding: 30rpx;
}

.content-header {
  margin-bottom: 40rpx;
}

.content-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.content-update {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.content-body {
  
}

.content-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 20rpx;
}

.section-paragraph {
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

/* 底部样式 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 0;
  background-color: #0F1A38;
  text-align: center;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}