.customer-service-page {
  width: 100%;
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #050b1f;
  background-image: linear-gradient(to bottom, #0c1840, #050b1f);
  z-index: -1;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.section-title {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #3a79fe;
}

/* 联系方式卡片 */
.contact-card {
  width: 90%;
  margin: 30rpx auto;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(58, 121, 254, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.icon-emoji {
  font-size: 40rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 6rpx;
}

.contact-value {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 500;
}

.contact-action {
  width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: rgba(58, 121, 254, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #ffffff;
}

/* 二维码区域 */
.qrcode-section {
  width: 90%;
  margin: 30rpx auto;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

.qrcode-container {
  width: 620rpx; /* 改为横向长方形宽度 */
  height: 240rpx; /* 改为横向长方形高度 */
  margin: 20rpx auto;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qrcode-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片充满容器 */
}

.qrcode-loading {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(15, 26, 56, 0.5);
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #3a79fe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.qrcode-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(15, 26, 56, 0.5);
}

.placeholder-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.qrcode-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
}

/* 服务时间 */
.service-hours {
  width: 90%;
  margin: 30rpx auto;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.service-time {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.service-note {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}