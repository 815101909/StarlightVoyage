<view class="container customer-service-page">
  <!-- 背景 -->
  <view class="page-bg"></view>
  
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">联系客服</text>
  </view>
  
  <!-- 联系方式卡片 -->
  <view class="contact-card">
    <view class="section-title">联系方式</view>
    
    <!-- 邮箱联系 -->
    <view class="contact-item">
      <view class="contact-icon email-icon">
        <text class="icon-emoji">✉️</text>
      </view>
      <view class="contact-info">
        <view class="contact-label">电子邮箱</view>
        <view class="contact-value">{{contactInfo.email}}</view>
      </view>
      <view class="contact-action" bindtap="copyEmail">
        <text>复制</text>
      </view>
    </view>
    
    <!-- 微信联系 -->
    <view class="contact-item">
      <view class="contact-icon wechat-icon">
        <text class="icon-emoji">💬</text>
      </view>
      <view class="contact-info">
        <view class="contact-label">微信客服</view>
        <view class="contact-value">{{contactInfo.wechat}}</view>
      </view>
      <view class="contact-action" bindtap="copyWechat">
        <text>复制</text>
      </view>
    </view>
  </view>
  
  <!-- 微信公众号二维码 -->
  <view class="qrcode-section">
    <view class="section-title">扫码关注公众号</view>
    <view class="qrcode-container" bindtap="previewQRCode">
      <block wx:if="{{!isLoading && qrCodeUrl}}">
        <image class="qrcode-image" src="{{qrCodeUrl}}" mode="aspectFit"></image>
      </block>
      <view wx:elif="{{isLoading}}" class="qrcode-loading">
        <view class="loading-icon"></view>
        <text class="loading-text">加载中...</text>
      </view>
      <view wx:else class="qrcode-placeholder">
        <text class="placeholder-text">二维码加载失败</text>
      </view>
    </view>
    <view class="qrcode-tip">长按二维码可保存图片</view>
  </view>
  
  <!-- 服务时间信息 -->
  <view class="service-hours">
    <view class="section-title">服务时间</view>
    <view class="service-time">周一至周五：9:00 - 19:00</view>
    <view class="service-time">周六至周日：10:00 - 18:00</view>
    <view class="service-note">节假日客服时间可能有调整，请以公众号通知为准</view>
  </view>
  
  <!-- 页脚 -->
  <view class="footer">
    <text class="footer-text">晓视界客服中心竭诚为您服务</text>
  </view>
</view> 