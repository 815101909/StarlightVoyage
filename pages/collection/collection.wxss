.collection-page {
  width: 100%;
  min-height: 100vh;
  position: relative;
  padding-bottom: 100rpx;
}

.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #050b1f;
  background-image: linear-gradient(to bottom, #0c1840, #050b1f);
  z-index: -1;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

/* 登录提示样式 */
.login-tip {
  width: 90%;
  margin: 100rpx auto;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3a79fe;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 收藏文章列表 */
.bookmarks-container {
  padding: 20rpx;
}

.article-card {
  width: 100%;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  display: flex;
  position: relative;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.article-cover-container {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.article-cover {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: cover;
}

.article-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 10rpx;
}

.article-author {
  margin-right: 20rpx;
}

.article-stats {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.article-views {
  margin-right: 20rpx;
}

.article-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 2;
}

.remove-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.remove-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 无收藏内容样式 */
.empty-bookmarks {
  width: 90%;
  margin: 100rpx auto;
  text-align: center;
  padding: 60rpx 20rpx;
  background-color: rgba(15, 26, 56, 0.5);
  border-radius: 15rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 40rpx;
}

.explore-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3a79fe;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  padding: 0;
}

/* 加载中样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3a79fe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
