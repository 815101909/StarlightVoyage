/* pages/starcheckin/starcheckin.wxss */
.starcheckin-page {
  width: 100%;
  min-height: 100vh;
  position: relative;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

/* 星空背景 */
.starry-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #050b1f;
  background-image: radial-gradient(circle at 50% 0%, #0c1840, #050b1f);
  z-index: -1;
  overflow: hidden;
}

.starry-bg:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(1px 1px at 25% 15%, white, transparent),
    radial-gradient(1px 1px at 50% 50%, white, transparent),
    radial-gradient(2px 2px at 75% 75%, white, transparent),
    radial-gradient(1px 1px at 30% 45%, white, transparent),
    radial-gradient(2px 2px at 65% 20%, white, transparent),
    radial-gradient(1px 1px at 90% 65%, white, transparent),
    radial-gradient(1.5px 1.5px at 10% 85%, white, transparent),
    radial-gradient(1px 1px at 40% 25%, white, transparent);
  background-size: 350px 350px;
  background-repeat: repeat;
  opacity: 0.5;
}

/* 加载中样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3a79fe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 打卡信息栏 */
.checkin-info {
  margin: 30rpx;
  display: flex;
  flex-direction: column;
}

.info-card {
  display: flex;
  background: rgba(30, 45, 75, 0.7);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3);
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  padding: 0 10rpx;
}

.info-item:last-child {
  border-right: none;
}

.info-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 36rpx;
  color: #f5d442;
  font-weight: bold;
}

/* 打卡按钮 */
.checkin-btn {
  height: 100rpx;
  background: linear-gradient(135deg, #3a79fe, #7d9ff4);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.checkin-btn:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.3);
}

.checkin-btn.checked {
  background: linear-gradient(135deg, #57c84d, #2ca120);
}

.btn-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.btn-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

/* 日历区域 */
.calendar-container {
  margin: 20rpx 30rpx;
  background: rgba(30, 45, 75, 0.7);
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-left, .header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(58, 121, 254, 0.2);
  border-radius: 50%;
}

.header-title {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
}

.arrow {
  font-size: 30rpx;
  color: #ffffff;
}

/* 星期头部 */
.week-header {
  display: flex;
  margin-bottom: 10rpx;
}

.week-cell {
  flex: 1;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.week-cell text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 日历主体 */
.calendar-body {
  border-radius: 10rpx;
  overflow: hidden;
}

.week-row {
  display: flex;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.day-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 8rpx;
  margin: 0 2rpx;
  background: rgba(26, 35, 59, 0.5);
}

.day-number {
  font-size: 26rpx;
  color: #ffffff;
}

.day-other-month .day-number {
  color: rgba(255, 255, 255, 0.3);
}

.day-today {
  background: rgba(58, 121, 254, 0.3);
  box-shadow: 0 0 10rpx rgba(58, 121, 254, 0.5);
}

.day-has-checkin {
  position: relative;
}

.checkin-icon {
  position: absolute;
  bottom: 5rpx;
  font-size: 20rpx;
  color: #f5d442;
}

.icon-star {
  color: #f5d442;
  animation: twinkle 2s infinite;
}

@keyframes twinkle {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 日历说明 */
.calendar-legend {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  padding-top: 10rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.legend-icon.checked {
  background-color: #f5d442;
  box-shadow: 0 0 5rpx #f5d442;
}

.legend-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 打卡说明变更为每日正能量 */
.daily-quote {
  margin: 20rpx 30rpx;
  background: rgba(30, 45, 75, 0.7);
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.daily-quote:before {
  content: "\201C";
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-size: 120rpx;
  color: rgba(58, 121, 254, 0.1);
  font-family: serif;
  line-height: 1;
}

.quote-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  position: relative;
}

.quote-content {
  padding: 0 10rpx;
  position: relative;
}

.quote-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  font-style: italic;
  display: block;
}

.quote-author {
  font-size: 24rpx;
  color: #f5d442;
  text-align: right;
  margin-top: 15rpx;
  display: block;
}

/* 星体详情弹窗 */
.celestial-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}

.modal-content {
  width: 86%;
  max-height: 85vh;
  background-color: #0c1840;
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(58, 121, 254, 0.3);
  overflow-y: auto;
}

.modal-close {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  font-size: 36rpx;
  z-index: 2;
}

.celestial-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.celestial-name {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.celestial-type {
  font-size: 24rpx;
  color: #3a79fe;
  background: rgba(58, 121, 254, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.celestial-image-container {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  overflow: hidden;
}

.celestial-image {
  width: 100%;
  height: 100%;
}

.celestial-info {
  margin-top: 20rpx;
}

.celestial-description {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.checkin-timestamp {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-top: 20rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.checkin-timestamp text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 5rpx;
} 