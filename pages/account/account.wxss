/* pages/account/account.wxss */

.account-page {
  min-height: 100vh;
  background-color: #0F1A38;
  color: white;
  padding: 30rpx;
  position: relative;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #0F1A38, #142447 30%, #0F1A38 100%);
  z-index: -1;
}

.page-header {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(125, 161, 255, 0.2);
  border-top: 6rpx solid #7D9FF4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section-title {
  font-size: 28rpx;
  color: #ABB2C9;
  margin: 30rpx 0 20rpx;
  padding-left: 20rpx;
}

/* 基本信息区域 */
.info-section {
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid rgba(125, 161, 255, 0.1);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.info-value {
  font-size: 28rpx;
  color: #ABB2C9;
}

/* 用户ID容器 */
.user-id-container {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(125, 159, 244, 0.1);
  border-radius: 20rpx;
  border: 1px solid rgba(125, 159, 244, 0.2);
  transition: all 0.3s ease;
}

.user-id-container:active {
  background: rgba(125, 159, 244, 0.2);
  transform: scale(0.98);
}

.user-id {
  font-size: 24rpx;
  color: #7D9FF4;
  font-family: 'Courier New', monospace;
  margin-right: 12rpx;
}

.copy-hint {
  font-size: 20rpx;
  color: rgba(125, 159, 244, 0.7);
  opacity: 0.8;
}

.info-value-container {
  display: flex;
  align-items: center;
}

.action-text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #7D9FF4;
  background: rgba(125, 159, 244, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 设备信息区域 */
.devices-section {
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  margin-bottom: 20rpx;
}

.devices-list {
  padding: 0 20rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
}

.device-info {
  display: flex;
  flex-direction: column;
}

.device-name {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.device-time {
  font-size: 24rpx;
  color: #ABB2C9;
  margin-bottom: 6rpx;
}

.device-current {
  font-size: 22rpx;
  color: #7D9FF4;
  background: rgba(125, 159, 244, 0.1);
  padding: 2rpx 12rpx;
  text-align: center;
  width: 280rpx;
  border-radius: 16rpx;
  display: inline-block;
}

/* 账号注销区域 */
.deactivate-section {
  margin: 40rpx 0;
  text-align: center;
}

.deactivate-button {
  display: inline-block;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
  border: 1px solid rgba(255, 107, 107, 0.3);
  border-radius: 30rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.deactivate-hint {
  display: block;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #ABB2C9;
}

