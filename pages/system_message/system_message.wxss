/* pages/system_message/system_message.wxss */
.system-message-page {
  width: 100%;
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #050b1f;
  background-image: linear-gradient(to bottom, #0c1840, #050b1f);
  z-index: -1;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(58, 121, 254, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.refresh-icon {
  font-size: 32rpx;
}

/* 消息列表样式 */
.message-list {
  padding: 20rpx;
}

.message-item {
  background-color: rgba(30, 45, 75, 0.5);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease;
}

.message-item:active {
  transform: scale(0.98);
}

.message-indicator {
  width: 8rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  transition: background-color 0.3s ease;
}

.message-content {
  flex: 1;
  margin-left: 15rpx;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.message-title {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 500;
}

.message-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.message-preview {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空消息提示 */
.empty-messages {
  width: 90%;
  margin: 100rpx auto;
  text-align: center;
  padding: 60rpx 20rpx;
  background-color: rgba(15, 26, 56, 0.5);
  border-radius: 15rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

/* 加载中样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3a79fe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 