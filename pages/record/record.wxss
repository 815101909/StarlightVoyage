.record-page {
  width: 100%;
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #050b1f;
  background-image: linear-gradient(to bottom, #0c1840, #050b1f);
  z-index: -1;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  position: relative;
}

.page-title {
  font-size: 38rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
  letter-spacing: 2rpx;
}

/* 登录提示样式 */
.login-tip {
  width: 90%;
  margin: 100rpx auto;
  background-color: rgba(15, 26, 56, 0.7);
  border-radius: 15rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 40rpx;
}

.login-btn, .create-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3a79fe;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 记录列表样式 */
.records-container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-card {
  width: calc(100% - 40rpx);
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.4);
  background-color: rgba(15, 26, 56, 0.7);
  position: relative;
  transition: transform 0.3s, box-shadow 0.3s;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.record-image-container {
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  position: relative;
}

.record-main-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s;
}

.record-card:active .record-main-image {
  transform: scale(1.05);
}

.no-image {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(30, 45, 75, 0.6);
}

.no-image-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

.record-info {
  padding: 15rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7) 80%, transparent);
  text-align: center;
}

.record-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}

.record-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
}

/* 空记录提示 */
.empty-records {
  width: 90%;
  margin: 100rpx auto;
  text-align: center;
  padding: 60rpx 20rpx;
  background-color: rgba(15, 26, 56, 0.5);
  border-radius: 15rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 40rpx;
}

/* 加载中样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3a79fe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}