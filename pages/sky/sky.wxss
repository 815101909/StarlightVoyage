  z-index: 1;
}

.detail-card-image {
  width: 100%;
  max-width: 500rpx;
  height: 350rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(125, 159, 244, 0.2);
}

.detail-card-content {
  flex: 1;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.detail-card-description {
  font-size: 32rpx;
  color: #34495e;
  line-height: 1.8;
  text-align: justify;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  border-left: 5rpx solid #667eea;
  position: relative;
}

.detail-card-description::before {
  content: '"';
  position: absolute;
  top: 10rpx;
  left: 15rpx;
  font-size: 60rpx;
  color: rgba(102, 126, 234, 0.3);
  font-family: serif;
  line-height: 1;
}

.detail-card-additional {
  margin-top: 30rpx;
  position: relative;
  z-index: 1;
}

.detail-card-additional-content {
  font-size: 28rpx;
  color: #5d6d7e;
  line-height: 1.7;
  text-align: justify;
  background: rgba(102, 126, 234, 0.05);
  padding: 25rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

/* 模态框底部 */
.detail-modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.detail-page-button {
  flex: 1;
  max-width: 200rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 35rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.detail-page-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.detail-page-button.disabled {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
  transform: none !important;
  cursor: not-allowed;
}

.detail-page-button.prev {
  margin-right: 20rpx;
}

.detail-page-button.next {
  margin-left: 20rpx;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .detail-modal-content {
    width: 95%;
    height: 90%;
  }
  
  .detail-a4-page {
    padding: 30rpx 25rpx;
    min-height: 700rpx;
  }
  
  .detail-card-title {
    font-size: 42rpx;
  }
  
  .detail-card-subtitle {
    font-size: 28rpx;
  }
  
  .detail-card-description {
    font-size: 28rpx;
    padding: 25rpx;
  }
  
  .detail-card-image {
    height: 300rpx;
  }
}

