/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #081020;
  position: relative;
  overflow: hidden;
}

/* 页面标题 */
.page-title {
  position: relative;
  z-index: 1;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  color: white;
  margin-top: 130rpx;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

/* 内容包装器 */
.content-wrapper {
  flex: 1;
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* A4容器 */
.a4-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 100%;
}

/* A4页面 */
.a4-page {
  background-color: #FFF5F7; /* 改为非常浅的粉色背景 */
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  width: 100%; /* 占满全部宽度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 添加垂直居中 */
  box-sizing: border-box;
  position: relative;
  min-height: 1100rpx; /* 进一步增加高度 */
  padding: 5rpx 0;
}

/* A4图片容器 */
.a4-image-container {
  width: 100%;
  padding: 5rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center; /* 确保垂直居中 */
  height: 100%;
}

/* A4图片样式 */
.a4-image {
  width: 100%; /* 占据整个容器宽度 */
  max-width: 750rpx; /* 增大最大宽度到更接近屏幕宽度 */
  border-radius: 6rpx;
  background-color: #FFF5F7; /* 改为非常浅的粉色背景 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  /* 确保A4为竖向显示 - 正确的A4纵横比: 1:1.414 */
  aspect-ratio: 0.7071/1; /* 1/1.414 = 0.7071 */
  object-fit: contain; /* 改为contain确保整个图片能被看到 */
  height: auto;
  min-height: 1050rpx; /* 增加最小高度以匹配页面高度 */
}

/* 图片索引样式 */
.image-index {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 音频部分样式 */
.audio-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.audio-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(78, 138, 235, 0.7);
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  width: 60%;
  border: none;
  transition: all 0.3s ease;
}

.audio-button.playing {
  background-color: rgba(235, 78, 78, 0.7);
}

.audio-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-star {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
