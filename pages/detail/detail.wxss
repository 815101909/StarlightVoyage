/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background-color: #081020;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;  /* 减少padding，给图片更多空间 */
}

/* 标题容器 */
.title-container {
  width: 100%;
  max-width: 750rpx;  /* 增加标题容器宽度 */
  text-align: center;
  margin-bottom: 20rpx;  /* 减少标题底部间距 */
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 图片容器 */
.image-container {
  width: 100%;
  max-width: 750rpx;  /* 增加图片容器最大宽度 */
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background: transparent;  /* 图片容器背景透明 */
}

/* 图片轮播 */
.image-swiper {
  width: 100%;
  height: 1100rpx;  /* 增加轮播高度，让图片更大 */
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  background: transparent;  /* 轮播容器背景透明 */
}

/* 媒体轮播（图片+视频） */
.media-swiper {
  width: 100%;
  height: 1000rpx;  /* 媒体轮播高度 */
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  background: transparent;  /* 媒体轮播容器背景透明 */
}

/* 主图片 */
.main-image {
  width: 100%;
  height: 1000rpx;  /* 增加图片高度，让图片更大 */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  background: transparent;
  object-fit: contain;  /* 保持等比例缩放 */
  display: block;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* 占位图片 - 空白A4纸 */
.placeholder-image {
  width: 100%;
  height: 1000rpx;  /* 与图片高度保持一致 */
  background: #FFF5F7;  /* 浅粉色背景 */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 占位图片底部装饰 */
.placeholder-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: linear-gradient(
    to right,
    rgba(130, 150, 255, 0.08) 0%,
    rgba(130, 150, 255, 0.2) 50%,
    rgba(130, 150, 255, 0.08) 100%
  );
  border-radius: 0 0 24rpx 24rpx;
  z-index: 1;
}

/* 图片点击效果 */
.main-image:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.4);
}

/* 主视频 */
.main-video {
  width: 100%;
  height: 1000rpx;  /* 视频高度 */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  background: #000000;
  object-fit: contain;
  display: block;
}

/* 图片计数器 */
.image-counter {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  z-index: 100;
  backdrop-filter: blur(10rpx);
  pointer-events: none; /* 不阻挡下方图片的点击事件 */
}

/* 媒体计数器 */
.media-counter {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  z-index: 100;
  backdrop-filter: blur(10rpx);
  pointer-events: none; /* 不阻挡下方媒体的点击事件 */
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 180rpx;
  left: 30rpx;
  width: 70rpx;
  height: 70rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.7);
}

