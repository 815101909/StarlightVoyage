/* pages/profile/profile.wxss */

/* 页面基础样式 */
.profile-page {
  min-height: 100vh;
  background-color: #0F1A38;
  color: white;
  padding: 30rpx;
  position: relative;
}

.profile-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #0F1A38, #142447 30%, #0F1A38 100%);
  z-index: -1;
}

/* 用户卡片 */
.user-card {
  display: flex;
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  backdrop-filter: blur(10px);
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(125, 161, 255, 0.3);
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(125, 161, 255, 0.3);

  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.default-avatar::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  z-index: 1;
}

.avatar-text {
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.member-tag {
  position: absolute;
  bottom: 0;
  right: 0;
  background: linear-gradient(to right, #FFD700, #FFA500);
  border-radius: 15rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #0F1A38;
}

.user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-top: 10rpx;
}

.username {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.userid {
  font-size: 24rpx;
  color: #ABB2C9;
  margin-bottom: 15rpx;
}

.edit-profile {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #ABB2C9;
  border: 1rpx solid #ABB2C9;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

/* 会员和星空打卡按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  height: 160rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx 0 30rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.full-width {
  width: 100%;
}

.action-button:active {
  transform: scale(0.98);
}

.membership-button {
  background: linear-gradient(135deg, #9B7F4B, #FFEAA0);
}

.starcard-button {
  background: linear-gradient(135deg, #465B9A, #7D9FF4);
}

.starcard-button-unchecked {
  background: linear-gradient(135deg, #7b4e5b, #f49d9d);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.unchecked-desc {
  color: #ffdbdb !important;
  font-weight: bold;
}

.planet-wheel-button {
  background: linear-gradient(135deg, #2C7A7B, #81E6D9);
}

.community-button {
  background: linear-gradient(135deg, #2C7A7B, #81E6D9);
}

.action-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.action-icon.membership-icon {
  background-image: url('/pages/profile/images/会员中心.jpg');
}

.action-icon.starcard-icon {
  background-image: url('/pages/profile/images/星空打卡.jpg');
}

.action-icon.planet-wheel-icon {
  background-image: url('/pages/profile/images/星球转盘.jpg');
}

.action-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}

.action-text {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

.action-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 8rpx;
  line-height: 1.2;
}

.checkin-badge {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  background-color: #FF6B6B;
  color: white;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.5);
  animation: pulseBadge 1.5s infinite;
  font-weight: bold;
}

@keyframes pulseBadge {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

/* 部分标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.section-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.section-more {
  font-size: 24rpx;
  color: #ABB2C9;
}

/* 功能按钮区域 */
.function-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 20rpx;
  padding: 30rpx;
  background-color: #162048;
  border-radius: 15rpx;
  margin: 30rpx 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.function-emoji {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.function-text {
  font-size: 26rpx;
  color: #ffffff;
}

/* 功能图标 */
