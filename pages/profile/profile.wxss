/* 近期活动记录 */
.activity-section {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.activity-list {
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 16rpx;
  padding: 10rpx 0;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.activity-item:last-child {
  border-bottom: none;
}

/* 活动图标样式 */
.activity-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: rgba(125, 159, 244, 0.1);
}

.activity-content {
  flex: 1;
  overflow: hidden;
}

.activity-title {
  font-size: 26rpx;
  color: white;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.activity-time {
  font-size: 22rpx;
  color: #ABB2C9;
}

.empty-activity {
  text-align: center;
  padding: 40rpx 0;
  color: #ABB2C9;
  font-size: 26rpx;
}

/* 活动图标类型 */
.read-icon {
  background-color: rgba(125, 159, 244, 0.2);
}

.checkin-icon {
  background-color: rgba(255, 204, 102, 0.2);
}

.observe-icon {
  background-color: rgba(102, 204, 153, 0.2);
}

.activity-collection-icon {
  background-color: rgba(255, 153, 102, 0.2);
}

.activity-community-icon {
  background-color: rgba(153, 102, 255, 0.2);
}

.watch-icon {
  background-color: rgba(255, 102, 204, 0.2); 
}

/* 底部 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 30rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 26, 56, 0.8);
  z-index: 999;
  backdrop-filter: blur(5px);
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(125, 159, 244, 0.2);
  border-top: 6rpx solid rgba(125, 159, 244, 0.8);
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 6rpx;
}

.user-tag {
  background: rgba(125, 159, 244, 0.2);
  color: #7D9FF4;
  font-size: 22rpx;
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.user-goal {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  background: rgba(255, 204, 102, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  max-width: 95%;
}

.goal-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.goal-text {
  font-size: 22rpx;
  color: #FFCC66;
  line-height: 1.3;
}

/* 学习目标卡片 */
.goal-card {
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
  border-bottom: 1px solid rgba(255, 204, 102, 0.2);
  padding-bottom: 14rpx;
}

.goal-title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 204, 102, 0.9);
}

.goal-content {
  display: flex;
  align-items: flex-start;
  padding: 6rpx 0;
}

.goal-icon {
  font-size: 30rpx;
  margin-right: 12rpx;
  line-height: 1.4;
}

.goal-content-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  flex: 1;
}

.login-btn {
  font-size: 34rpx;
  font-weight: bold;
  color: #7D9FF4;
  margin-bottom: 20rpx;
  background: rgba(125, 159, 244, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  align-self: flex-start;
  display: inline-block;
}

.goal-empty {
  opacity: 0.8;
}

.goal-empty .goal-content-text {
  color: rgba(255, 204, 102, 0.7);
  font-style: italic;
}

/* 设置菜单 */
.setting-section {
  margin: 20rpx 30rpx;
  background-color: transparent;
}

.setting-title {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 10rpx;
  padding: 10rpx 0;
}

.setting-menu {
  background-color: rgba(15, 26, 56, 0.8);
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #ffffff;
}

.setting-value {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 退出登录按钮样式 */
.logout-item {
  background-color: rgba(209, 49, 49, 0.1);
}

.logout-label {
  color: #ff6b6b;
}

/* 星球转盘 */
.planet-wheel-section {
  margin: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.planet-wheel-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: rgba(29, 41, 81, 0.7);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.planet-wheel-content:active {
  transform: scale(0.98);
  background-color: rgba(29, 41, 81, 0.9);
}

.planet-wheel-preview {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.planet-wheel-info {
  display: flex;
  flex-direction: column;
}

.planet-wheel-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.planet-wheel-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.planet-wheel-arrow {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.4);
  transform: rotate(90deg);
}

/* 活动列表弹窗 */
.activity-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.activity-modal.show {
  visibility: visible;
  opacity: 1;
}

.activity-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.activity-modal-content {
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 800rpx;
  max-height: 80vh;
  background: #001529;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

.activity-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #15395b;
  background: #002140;
}

.activity-modal-title {
  font-size: 28rpx;
  color: #fff;
}

.activity-modal-close {
  font-size: 32rpx;
  color: #8b949e;
  padding: 10rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.activity-modal-list {
  flex: 1;
  padding: 10rpx 30rpx;
  max-height: calc(70vh - 90rpx);
}

.activity-modal .activity-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #15395b;
}

.activity-modal .activity-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
  background: #002140;
  flex-shrink: 0;
}

.activity-modal .activity-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.activity-modal .activity-title {
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 6rpx;
  line-height: 1.4;
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.activity-modal .activity-time {
  font-size: 20rpx;
  color: #8b949e;
}

/* 加载更多和没有更多的样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 16rpx 0;
}

.loading-text, .no-more-text {
  font-size: 20rpx;
  color: #8b949e;
}

/* 活动类型图标的特定样式 */
.activity-modal .read-icon {
  color: #1890ff;
}

.activity-modal .checkin-icon {
  color: #52c41a;
}

.activity-modal .favorite-icon {
  color: #faad14;
}

.activity-modal .observe-icon {
  color: #13c2c2;
}

.activity-modal .community-icon {
  color: #722ed1;
}

.activity-modal .watch-icon {
  color: #2f54eb;
}

/* 没有更多数据的文本样式 */
.no-more {
  font-size: 20rpx;
  color: #8b949e;
  text-align: center;
  padding: 20rpx 0;
}
