/* pages/observe/observe.wxss */
.observe-page {
  position: relative;
  min-height: 100vh;
}

/* 星空背景 */
.observe-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #050B16 0%, #0F1A38 50%, #1F2B4C 100%);
  z-index: -1;
  overflow: hidden;
}

.observe-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(1px 1px at 25px 5px, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 50px 25px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 125px 20px, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 70px 90px, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 175px 125px, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0)),
    radial-gradient(2px 2px at 20px 150px, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0)),
    radial-gradient(1px 1px at 200px 220px, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0));
  background-repeat: repeat;
  background-size: 200px 250px;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.title-container {
  position: relative;
  display: inline-block;
  margin-bottom: 16rpx;
}

.page-title {
  font-size: 55rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
  text-shadow: 0 0 15rpx rgba(255, 255, 255, 0.7);
  display: block;
  transform: translateX(15rpx);
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 2rpx;
  display: block;
  margin-top: 10rpx;
}

/* 北斗七星区域 */
.constellation-section {
  margin-bottom: 60rpx;
  text-align: center;
}

.section-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: var(--primary-color);
}

.section-subtitle {
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: var(--text-secondary);
}

.big-dipper-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  margin-top: 30rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 24rpx;
  overflow: hidden;
}

/* 背景小星星 */
.background-stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.tiny-star {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.8);
  animation: twinkle 3s infinite alternate;
}

@keyframes twinkle {
  0% { opacity: 0.4; }
  50% { opacity: 1; }
  100% { opacity: 0.7; }
}

/* 流星动画 */
.meteor {
  position: absolute;
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
  transform: rotate(-45deg);
  opacity: 0;
}

.meteor-1 {
  top: 20%;
  left: 60%;
  animation: meteor 5s linear infinite;
  animation-delay: 2s;
}

.meteor-2 {
  top: 35%;
  left: 30%;
  animation: meteor 6s linear infinite;
  animation-delay: 5s;
}

.meteor-3 {
  top: 60%;
  left: 70%;
  animation: meteor 4s linear infinite;
  animation-delay: 8s;
}

@keyframes meteor {
  0% { 
    transform: translateX(0) translateY(0) rotate(-45deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  50% {
    transform: translateX(-250rpx) translateY(250rpx) rotate(-45deg);
    opacity: 0;
  }
  100% {
    transform: translateX(-250rpx) translateY(250rpx) rotate(-45deg);
    opacity: 0;
  }
}

