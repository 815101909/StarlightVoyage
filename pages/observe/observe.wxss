  transition: all 0.3s;
}

.star-point .yuHeng {
  width: 24rpx;
  height: 24rpx;
}

.star-point .tianShu {
  width: 22rpx;
  height: 22rpx;
}

.star-point .yaoGuang {
  width: 20rpx;
  height: 20rpx;
}

.star-point .kaiYang {
  width: 19rpx;
  height: 19rpx;
}

.star-point .tianXuan {
