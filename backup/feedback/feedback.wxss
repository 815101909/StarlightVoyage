/* pages/feedback/feedback.wxss */

.feedback-page {
  padding: 30rpx;
  background-color: #f6f7f9;
  min-height: 100vh;
}

/* 各区块样式 */
.feedback-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 反馈类型样式 */
.feedback-types {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.type-item {
  margin: 10rpx;
  padding: 15rpx 30rpx;
  background: #f5f6f8;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.type-active {
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

/* 反馈内容输入框样式 */
.feedback-content {
  position: relative;
  padding-bottom: 40rpx;
}

.feedback-content textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  background: #f5f6f8;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.placeholder {
  color: #999;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传样式 */
.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.image-uploader {
  display: flex;
  flex-wrap: wrap;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-button {
  width: 200rpx;
  height: 200rpx;
  background: #f5f6f8;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  font-weight: 200;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式输入框样式 */
.contact-input {
  padding: 20rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}

.contact-input input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

/* 提交按钮样式 */
.submit-button-container {
  padding: 30rpx 0;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(24, 144, 255, 0.2);
  transition: all 0.3s;
}

.submit-button.submitting {
  opacity: 0.7;
}

.submit-button:active {
  transform: scale(0.98);
} 